<h1>Listing officerships</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Profile</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officerships.each do |officership| %>
      <tr>
        <td><%= officership.event_id %></td>
        <td><%= officership.profile_id %></td>
        <td><%= officership.description %></td>
        <td><%= link_to 'Show', officership %></td>
        <td><%= link_to 'Edit', edit_officership_path(officership) %></td>
        <td><%= link_to 'Destroy', officership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

