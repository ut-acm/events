<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<section class="wrapper">
	<section class="panel">
		
		<%= render '/devise/shared/heading'%>
		
		<ul class="content">
			<li>
				<span class="login-text">
					Please fill out this form to complete you registration
				</span>
					<div class="form-group">
					  <%= f.email_field :email, autofocus: true, required: true, placeholder: 'Email' %>
					</div>
					<div class="form-group">
					  <%= f.password_field :password, required: true, placeholder: 'Password' %>
					</div>
					<div class="form-group">
					  <%= f.password_field :password_confirmation, required: true, placeholder: 'Password Repeat' %>
					</div>
					<!-- TODO -->
					<%= devise_error_messages! %>
			</li>
		</ul>

		<div class="footer">
			<%= f.submit "Sign up" %>
			<br>
			<%= link_to "Log in to your account", new_session_path(resource_name), class: 'forget' %>
		</div>

	</section>
</section>

<% end %>
